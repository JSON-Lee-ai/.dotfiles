general {
	output_format = "i3bar"
	colors = true
	interval = 5
}

order += "battery 0"
order += "tztime local"

battery 0 {
	format = "%status %remaining %percentage"
	format_down = "No battery"
	path = "/sys/class/power_supply/BAT0/uevent"
	threshold_type = "percentage"
	low_threshold = 10
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
